---
import BlogHeader from '../components/Blog-header.astro';

interface Props {
  isList: boolean,
  slug: string,
	title: string,
	date: Date,
  tags: Array<string>
}

const { isList, slug, title, date, tags } = Astro.props;
---
<article class="blog-article">
  <!-- <img class="blog-thumb" src={thumb !== "" ? thumb : "/img/featured.png"} alt={title}> -->
  <BlogHeader
    isList={isList ? true : false}
    slug={slug}
    title={title}
    date={date}
    tags={tags}
  />
</article>

<style lang="scss">
  .blog-article {
    padding: var(--space-s);
    position: relative;
    border-block-end: 1px solid var(--c-border-primary);
    transition: background-color .3s ease;
    @include media(md) {
      padding: var(--space-m);
    }
    &:hover {
      background-color: rgb(27 160 242  / .2);
    }
  }
</style>
